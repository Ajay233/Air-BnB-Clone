<div class="jumbotron">
  <h1 class="display-4">Welcome to MakersBnB</h1>
  <h2>
    <% if @user == nil %>
      Welcome
    <% else %>
      Welcome<%=", #{@user.username}" %>
    <% end %>
  </h2>
</div>

<h2>Available spaces:</h2>
<form action="/spaces/new" method="get">
  <input class="submit" type="submit" value="Add space" />
</form>
<br/>

<ul>
<% @spaces.each do |space| %>
  <% if space.booked != 't' %>
    <form action="/<%= space.id %>/requests/new" method="post">
    Name: <%=space.name%><br>
    Description: <%=space.description%><br>
    Date available: <%=space.date_available%><br><br>
      <input class="submit" type="submit" name="Request this space" value="Request this space" />
    </form>
  <% end %>
<% end %>
